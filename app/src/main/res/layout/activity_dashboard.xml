<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <Button
        android:id="@+id/btnShowAllSensors"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:text="Display All sensors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAccelerometer"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:layout_marginTop="12dp"
        android:text="Accelerometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowAllSensors" />

    <Button
        android:id="@+id/btnGyro"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="Gyroscope"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAccelerometer" />


    <Button
        android:id="@+id/btnProximity"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="Proximity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGyro" />

    <Button
        android:id="@+id/btnLight"
        android:layout_width="366dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:text="Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnProximity" />

</androidx.constraintlayout.widget.ConstraintLayout>